# ML Service Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
HOST=0.0.0.0
PORT=8000

# External API Keys
NEWS_API_KEY=your-news-api-key
CRYPTO_NEWS_API_KEY=your-crypto-news-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Database Configuration (if needed)
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/neurofi_ml

# Model Configuration
MODEL_CACHE_DIR=./models
MODEL_UPDATE_INTERVAL=3600  # seconds

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute
DATA_FETCH_DELAY=0.1  # seconds between requests

# Training Configuration
TRAINING_DATA_RETENTION_DAYS=90
AUTO_RETRAIN_ENABLED=true
AUTO_RETRAIN_INTERVAL=24  # hours